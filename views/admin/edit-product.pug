extends ../layouts/main-layout.pug
block content 
                    form( method="POST" action="/admin/products")
                        input(type="hidden", name="_csrf" value=`${csrfToken}`)
                        input(type="hidden" name="id" value=`${product._id}`)
                          
                        .form-group.row.my-3
                            label( for="name").col-sm-2.col-form-label Product Name
                            .col-sm-10  
                              input( type="text" name="name" value=`${product.name}`).form-control#name 
                        .form-group.row.my-3
                            label( for="price").col-sm-2.col-form-label Price 
                            .col-sm-10  
                              input( type="text" name="price" value=`${product.price}`).form-control#price
                        .form-group.row.my-3
                            label( for="categoryid").col-sm-2.col-form-label Category
                            .col-sm-10  
                                each category in categories 
                                  input( type="checkbox" name="categoryids" value=`${category._id}` checked=category.selected)
                                  | #{category.name}
                                  br
                    
                        .form-group.row.my-3
                            label( for="desc").col-sm-2.col-form-label Describtion
                            .col-sm-10  
                              textarea(name="desc", cols="30", rows="10").form-control#desc #{product.desc}
                        .form-group.row.my-3
                            label( for="imageurl").col-sm-2.col-form-label Image
                            .col-sm-10  
                              input( type="text" name="imageurl" value=`${product.imageurl}`).form-control#imageurl
                        .form-group.row.my-3
                          .col-sm-10.offset-sm-2
                            input( type="submit" value="Save Product").btn.btn-primary
